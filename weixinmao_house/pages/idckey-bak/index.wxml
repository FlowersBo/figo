<!-- search -->

<view class="search">
  <!-- <view bindtap="toSearch" class="search_box"> -->
  <view class="search_box containerbox">
    <icon type="search" size="14" />
    <input placeholder='您想在哪里找IDC机房' confirm-type='search' bindconfirm='confirmTap'></input>
  </view>
</view>

<!-- 排序 -->
<view class="list_sort">
  <view class="sort_list {{isCars ? '' : 'select'}}" bindtap="selectCars">
    <text>{{title =='' ? '等级' : title}}</text>
    <image src="{{isCars ? '../../resource/images/buttom.png' : '../../resource/images/top-red.png'}}"></image>
  </view>

  <view class="sort_list {{isType ? '' : 'select'}}" bindtap="selectType">
    <text>{{typetitle =='' ? '面积' : typetitle}}</text>
    <image src="{{isType ? '../../resource/images/buttom.png' : '../../resource/images/top-red.png'}}"></image>
  </view>


  <view class="sort_list {{isRank ? '' : 'select'}}" bindtap="selectRank">
    <text>{{ranktitle =='' ? '数量' : ranktitle}}</text>
    <image src="{{isRank ? '../../resource/images/buttom.png' : '../../resource/images/top-red.png'}}"></image>
  </view>

</view>
<!-- 选择区域 -->
<view class="select_cars" hidden="{{isCars}}">
  <scroll-view class="bigWrap" scroll-y="true" scroll-top="{{scrollTop}}" style="height:400rpx; left: 0; top:0; bottom: 0; right: 0;">

    <view class="select_cars_list {{carid == 0 ? 'colorred' : ''}}" bindtap='selectcarsitem' id="0" data-title="全部">
      <text>全部</text>
      <block wx:if="{{carid== 0}}">
        <image src="../../resource/images/dui.png"></image>
      </block>
    </view>
    <block wx:for="{{arealist}}" wx:key="index">

      <block wx:if="{{item.id== carid}}">
        <view class="select_cars_list colorred" bindtap='selectcarsitem' id="{{item.id}}" data-title="{{item.name}}">
          <text>{{item.name}}</text>
          <image src="../../resource/images/dui.png"></image>

        </view>
      </block>
      <block wx:else>

        <view class="select_cars_list" bindtap='selectcarsitem' id="{{item.id}}" data-title="{{item.name}}">
          <text>{{item.name}}</text>
        </view>
      </block>
    </block>
  </scroll-view>
</view>


<view class="small_overlay" hidden="{{isCars}}" bindtap="selectCars"></view>

<!-- 选择数量 -->

<view class="select_sort" hidden="{{isPrice}}">
  <view class="select_cars_list {{priceid == 0 ? 'colorred' : ''}}" bindtap='selectpriceitem' id="0" data-title="不限">
    <text>不限</text>
    <block wx:if="{{priceid== 0}}">
      <image src="../../resource/images/dui.png"></image>
    </block>
  </view>
  <block wx:for="{{housepricelist}}" wx:key="index">
    <block wx:if="{{item.id== priceid}}">
      <view class="select_cars_list colorred" bindtap='selectpriceitem' id="{{item.id}}" data-title="{{item.name}}">
        <text>{{item.name}}</text>
        <image src="../../resource/images/dui.png"></image>
      </view>
    </block>
    <block wx:else>
      <view class="select_cars_list" bindtap='selectpriceitem' id="{{item.id}}" data-title="{{item.name}}">
        <text>{{item.name}}</text>
      </view>
    </block>
  </block>
</view>
<view class="small_overlay" hidden="{{isPrice}}" bindtap="selectPrice"></view>




<!-- 选择等级-->

<view class="select_sort" hidden="{{isType}}">
  <view class="select_cars_list {{typeid == 0 ? 'colorred' : ''}}" bindtap='selecttypeitem' id="0" data-title="不限">
    <text>不限</text>
    <block wx:if="{{typeid== 0}}">
      <image src="../../resource/images/dui.png"></image>
    </block>
  </view>
  <block wx:for="{{housetypelist}}" wx:key="index">
    <block wx:if="{{item.id== typeid}}">
      <view class="select_cars_list colorred" bindtap='selecttypeitem' id="{{item.id}}" data-title="{{item.name}}">
        <text>{{item.name}}</text>
        <image src="../../resource/images/dui.png"></image>
      </view>
    </block>
    <block wx:else>
      <view class="select_cars_list" bindtap='selecttypeitem' id="{{item.id}}" data-title="{{item.name}}">
        <text>{{item.name}}</text>
      </view>
    </block>
  </block>
</view>
<view class="small_overlay" hidden="{{isType}}" bindtap="selectType"></view>


<view class="idclist">
  <!-- 搜索结果描述 -->
  <block wx:if="{{idcList}}">
    <view class="searchres">
      <text>{{defaultAd}}{{userInput?userInput:''}}IDC机房</text>
      <text>共查到{{domIidcLength}}个机房</text>
    </view>
    <!-- 循环机房信息 -->
    <view class="listtop" data-id="{{item.ids}}" bindtap='toSailDetail' wx:for="{{idcList}}" wx:key="index" wx:for-item="item">
      <image src="{{siteRoots}}{{item.pic?item.pic:'/files/default01.jpg'}}"></image>
      <view class="des">
        <view class="title">{{item.title}}</view>
        <view class="desporlist">
          <view class="idcpro">机房等级: {{item.level?item.level:''}}</view>
          <view class="idcpro">总面积：{{item.area?item.area:''}}㎡</view>
          <view class="idcpro">机柜数量：{{item.num?item.num:''}}个</view>
          <view class="idcpro">备注：{{item.remark?item.remark:''}}</view>
        </view>
      </view>
    </view>
  </block>
</view>

<view style="height:65px;"></view>
<block wx:if="{{topsalelist}}">
  <view class="newslist" wx:for="{{topsalelist}}" wx:key="index">
    <view class="pic">
      <image src="{{item.avatarUrl}}"></image>
    </view>
    <view class="title">
      <view class="addresstop">
        <view>置顶 </view>
        <view>{{item.type}}</view>
        <view>{{item.name}}</view>
        <view bindtap='doCall' class="dotel" data-tel="{{item.tel}}">
          <image src="../../resource/images/telnew.png"></image>拨打电话</view>
      </view>
      <block wx:if="{{item.special}}">
        <view class="special">
          <view wx:for="{{item.special}}" wx:for-item="itemspecial">{{itemspecial}}</view>
        </view>

      </block>
      <view class="content">
        {{item.content}}
      </view>
      <view class="gomore" bindtap="toHouseDetail" data-id="{{item.id}}"> 全文 </view>

      <block wx:if="{{item.piclist}}">


        <view class="piclist">

          <image wx:for="{{item.piclist}}" wx:for-item="itempic" src="{{itempic}}" style='width:160rpx;height:160rpx;'></image>


        </view>
      </block>


      <view class="time">
        <view>{{item.createtime}}</view>
        <view>{{item.hits}}浏览</view>
      </view>


    </view>

  </view>
</block>
<!-- 列表 -->
<block wx:if="{{salelist}}">
  <view class="newslist" wx:for="{{salelist}}" wx:key="index">
    <view class="pic">
      <image src="{{item.avatarUrl}}"></image>
    </view>
    <view class="title">
      <view class="address">
        <view>{{item.type}}</view>
        <view>{{item.name}}</view>
        <view bindtap='doCall' class="dotel" data-tel="{{item.tel}}">
          <image src="../../resource/images/telnew.png"></image>拨打电话</view>
      </view>
      <block wx:if="{{item.special}}">
        <view class="special">
          <view wx:for="{{item.special}}" wx:for-item="itemspecial">{{itemspecial}}</view>
        </view>

      </block>
      <view class="content">
        {{item.content}}
      </view>
      <view class="gomore" bindtap="toHouseDetail" data-id="{{item.id}}"> 全文 </view>

      <block wx:if="{{item.piclist}}">


        <view class="piclist">

          <image wx:for="{{item.piclist}}" wx:for-item="itempic" src="{{itempic}}" style='width:160rpx;height:160rpx;'></image>


        </view>
      </block>


      <view class="time">
        <view>{{item.createtime}}</view>
        <view>{{item.hits}}浏览</view>
      </view>


    </view>

  </view>
</block>


<!-- 加载更多 -->
<view class="loadmore">
  <text>{{loadMore}}</text>
</view>
<!-- 区域筛选 -->
<view class='animation' animation="{{animationData}}" style="height:100%;position:fixed;visibility:{{show ? 'visible':'hidden'}}">
  <view class='animation-content'>
    <view class='pricezone'>
      <view class='pztitle'>
        <text>价格区间（元）</text>
      </view>
      <view class='inputzone'>
        <input type='digit' bindinput="bindKeyInput" placeholder="最低价" />
        <text style='color:#ddd'>-</text>
        <input type='digit' bindinput="bindKeyInput" placeholder="最高价" />
      </view>
    </view>
  </view>
</view>

