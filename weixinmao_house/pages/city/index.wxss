/* weixinmao_house/pages/city/index.wxss */
.citylist{
  display: flex;
  min-height:100%; 
  flex-flow:column wrap;
  overflow: hidden;
}
.citylist .list{
  position: relative;
  flex-grow: 1;
  width: 100%;
  height:300rpx;
  padding:10rpx 15rpx;
}
.citylist .list .bg{
  position: absolute;
  z-index:98;
  width: 718rpx;
  height:300rpx;
  padding: 0 5rpx;
}
.textbox{
  position: absolute;
  z-index:99;
  color:#ffffff;
  left:60rpx;
  top:150rpx;
}
.textbox .citytitle:nth-child(1){
  font-size: 1.3rem;
  color:#ffffff;
}
.textbox .citytitle:nth-child(2){
  font-size: .8rem;
  color:#ffffff;
}