.hotSailList{
  display: flex;
  min-height:100%; 
  flex-flow:column wrap;
  overflow: hidden;
}
.hotSailList .list{
  position: relative;
  flex-grow: 1;
  width: 100%;
  height:300rpx;
  padding:10rpx 15rpx;
}
.hotSailList .list .bg{
  position: absolute;
  z-index:98;
  width: 718rpx;
  height:300rpx;
  padding: 0 5rpx;
}
.textbox{
  position: absolute;
  z-index:99;
  color:#ffffff;
  left:60rpx;
  top:60rpx;
}
.textbox .citytitle:nth-child(2){
  font-size: .7rem;
  color:#ffffff;
}