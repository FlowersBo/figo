page{
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  color: #666;
}
/* 资讯 */
.list{
  width: 100%;
  background-color: #fff;
  border-bottom: 2rpx solid #ddd;
}
.list:first-child{
  margin-top: 30rpx;
}
.listWrap{
  display: flex;
  width: 96%;
  margin: auto;
  padding: 20rpx 0;
}
.newsWrap{
  width: 65%;
  display: flex;
  flex-direction: column;
}
.list-text{
  font-size: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.newsWrap .time{
  color: #aaa;
  font-size: 24rpx;
  margin-top: 24rpx;
}

.list-img{
  width: 35%;
  height: 150rpx;
}
.list-img image{
  width: 100%;
  height: 100%;
}
