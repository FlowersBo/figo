/* weixinmao_house/pages/evaluate/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  color: #666;
}
.evaluate{
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-weight: bold;
}
.wrap{
  width: 100%;
}
.evaluateWrap{
  width: 100%; 
  height: 220rpx;
  background-color: white;
  border-top:1rpx solid #ddd;
  margin-bottom: 6rpx;
  margin-top: 30rpx;
  display: flex; 
  align-items: center;
}
.tesla{
  width: 290rpx;
  height: 170rpx;
  margin: 0 15rpx;
}
.tesla image{
  width: 100%;
  height: 100%;
}
.star{
  width: 61%;
  height: 60rpx;
  position: relative;
}
.star-image{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  src: "/weixinmao_house/resource/images/typeface/star_on.png";
}
.item{
  position: absolute;
  top: 0rpx;
  width: 30rpx;
  height: 60rpx;
  /* background-color: yellow;
  opacity: 0.5; */
}

.conts{
  width: 100%;
  height: auto;
  background-color: white;
}
.areas{
  width: 100%;
  height:200rpx;
  font-size: 26rpx;
  text-indent: 26rpx;
  padding-top: 30rpx;
  margin: 0 auto;
  overflow: hidden;   
  position: relative; 
  margin-bottom: 30rpx;
}
.currentWordNumber{
  font-size: 24rpx;
  color: gray;
  position: absolute;
  right: 10rpx;
  top: -6rpx;
}
.hint{
   font-size: 26rpx;
   position: absolute;
   top: 120rpx;
   left: 30rpx;
   color: #FF6600;
}

/* 上传图片 */
.weui-cell{
  position: relative;
  width: 100%;
  background-color: white;
}
.weui-uploader__info{
  position: absolute;
  right: 70rpx;
  top: 0;
  font-size: 26rpx;
  color:gray;
  font-weight: bold;
}
.weui-uploader__title{
  font-size: 30rpx;
  font-weight: bold;
  color: gray;
}

.btn{
  width: 96%;
  height: 80rpx;
  background-color: red;
  color: #f5f5f5;
  font-weight: 500;
  text-align: center;
  line-height: 80rpx;
}