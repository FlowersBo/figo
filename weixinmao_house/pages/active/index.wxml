<!-- search -->
<view class="search">
	<navigator url="../city/city" hover-class="none">
		<image src="../../resource/images/coord.png" mode="aspectFit"></image>
		<text>{{city}}</text>
	</navigator>
	<view bindtap="toSearch" class="search_box">
		<icon type="search" size="14"/>
	    <text>请输入查询信息</text>
	</view>
</view>



<view style="height:10rpx;"></view>

<!-- 列表 -->
<view class="caselist">


                        <view class="caseitem" wx:for="{{list}}"  >
                              <view class="pic" bindtap="toActiveDetail" data-id="{{item.id}}">
                                <image src="{{item.thumb}}"></image>
                              </view>
                              <view class="title">
                                <view>  {{item.title}}</view>
                                <view>已有{{item.totalnum}}人报名</view>
                              </view>
                        </view>

                </view>

<!-- 加载更多 -->
<view class="loadmore">
	<text>{{loadMore}}</text>
</view>