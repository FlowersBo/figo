/* weixinmao_house/pages/phoneVerify/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #42BAA3;
  color: #666;
}
.changeInfo{
  width: 100%;
  height: 100%;
}
.inputWrap{
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.changeInfoName{
  width: 90%;
  height: 70rpx;
  background-color: white;
  margin: 30rpx 0;
  border-radius: 6rpx;
  font-size: 26rpx;
  position: relative;
}
input{
  width: 100%;
  height: 100%;
  line-height: 100%;
  text-indent:20rpx;
}
input :last-child{
  width: 70%;
}
.codeBtn{
  position: absolute;
  top: 0;
  right: 0;
  width: 30%;
  height: 100%;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #aaa;
}
.changeBtn{
  width: 32%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color:#666;
  border-radius:80px/70px;
}