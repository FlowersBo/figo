<!--weixinmao_house/pages/phoneVerify/index.wxml-->

<view class='changeInfo'>
  <view class='inputWrap'>
    <view class='changeInfoName'>
     <input placeholder='请输入姓名' bindinput='getNameValue' value='{{name}}'/> 
    </view>
  
    <view class='changeInfoName'>
      <input placeholder='请输入手机号' bindinput='getPhoneValue' type="number" maxlength="11" value='{{phone}}'/> 
    </view>
    <view class='changeInfoName'>
      <input placeholder='请输入验证码' bindinput='getCodeValue' value='{{code}}' style='width:70%;'/> 
      <button class='codeBtn' bindtap='getVerificationCode' disabled='{{disabled}}'>{{codename}}</button>
    </view>
  </view>
  <button class='changeBtn' bindtap='save'>保存</button>
</view>
