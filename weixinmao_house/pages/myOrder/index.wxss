.order{
  width: 100%;
}
.order .orderDetail{
  position: relative;
  margin: 50rpx 0;
  background-color: white;
  box-shadow:0 6rpx 4rpx #ddd; 
}
.orderDetail:last-child{
  margin-bottom: 6rpx;
}
.orderDetail .currentState{
  position: absolute;
  right: 0;
  transform: translateY(-26%);
  width: 140rpx;
  height: 140rpx;
}

.orderDetail-wrap{
  width: 96%;
  left:0;
  right:0;
  margin: 0 auto;
  padding-bottom: 10rpx;
 
}

.midelDetail-wrap{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
}
.brand{
  display: flex;
}
.brand-child{
  color: #F0C700;
  margin: 0 30rpx;
}
 .order .orderDetail .orderDetail-date{
  font-size: 26rpx;
} 
.midelDetail-text{
  width: 100%;
  padding-bottom: 10rpx;
  font-size: 28rpx;
  overflow: hidden; 
  white-space: nowrap; 
  text-overflow: ellipsis;
}
.orderDetail-wrap .model{
  display: flex;
  /* align-items: center; */
  margin-top: 10rpx;
  justify-content: space-between;
  box-sizing: border-box;
  
}
.model-img{
  width:170rpx;
  height:170rpx;
  border:0.5rpx solid #e5e5e5;
  margin: 10rpx 0;
}
 .orderDetail-wrap .model .modelContent{
    width: 73%;
    margin: 20rpx 0;
} 
