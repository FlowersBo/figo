 .orderDetail-wrap .detail{
  font-size: 24rpx;
  color: #aaa;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
} 
.orderDetail-wrap .price{
  direction: rtl;
  font-size: 30rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}
.orderDetail-wrap .clickBtn{
  overflow: hidden;
  height: 70rpx;
  
}
.btnwrap{
  height: 100%;
  float: right; 
}
.orderDetail-wrap .clickBtn .btn{
  top: 50%;
  transform: translateY(-50%);
  display: inline-block;
  color: #666;
  background-color: white;
  width: 148rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  margin-left: 10rpx;
  border: 1rpx solid #e5e5e5;
}
button::after{
  border: none;
  outline: none;
}
