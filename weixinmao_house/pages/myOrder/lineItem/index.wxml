<!--weixinmao_house/pages/myOrder/lineItem/index.wxml-->
<view class='lineItem' >
  <view class='installState'>
    <view class='installState-text'>
      <image src="../../../resource/images/typeface/accomplish1.png" style='width:100%;height:100%;'/>
    </view>
    <image class='installState-img' src='../../../resource/images/typeface/charge.png'></image>
  </view>
  <view class='orderFrom'>
    <view class='wrap'>
      <view class='orderStatus'>
        <view class='orderStatus-content'>
          <view class='content-order'>订单状态</view>
          <view class='content-phone'>咨询电话：{{consultPhone}}</view>
        </view>
        <view class='content-details'>{{orderStatus}}</view>
      </view>
    <!-- 员工信息 -->
      <view class='staffInfo'>
        <view class='materials-header'>场堪员资料</view>
        <view class='staffInfoWrap'>
          <image class='staffInfoWrap-img' src='../../../resource/images/typeface/user.png'/>
          <view class='information'>
            <text class='informationName'>姓名：{{informationName}}</text>
            <text class='informationPhonwe'>电话：{{informationPhonwe}}</text>
            <text class='informationNumber'>工号：{{informationNumber}}</text>
            <text class='informationTime'>总场堪数{{informationTime}}</text>
            <view class='informationTimeStar'>
              <text>服务星级：</text>
               <view  wx:for="{{scs}}" class='star-{{item}}' wx:key="index"></view>
            </view>
          </view>
        </view>
      </view>
    <!-- 评价 -->
      <view class='bigWrap' animation="{{slide_up2}}">
        <view class='materials-header'>您的评价</view>
        <view class='evaluates'>
          <view class='itemWrap'>
            <view class='evaluateWrap'>
              <view class='straWrap'>
                <text style='font-size:30rpx; font-weight:600; white-space:nowrap '>安装进度</text>
                <view class='star'>
                  <block wx:for="{{stars}}" wx:key="index">
                    <image class="star-image" style="left: {{item*90}}rpx" src="{{key > item ?(key-item == 0.5?halfSrc:selectedSrc) : normalSrc}}">
                      <view class="item" style="left:0rpx" data-key="{{item+0.5}}" bindtap="selectLeft"></view>
                      <view class="item" style="left:30rpx" data-key="{{item+1}}" bindtap="selectRight"></view>
                    </image>
                  </block>
                </view>
              </view>
              <view class='straWrap'>
                <text style='font-size:30rpx; font-weight:600; white-space:nowrap '>服务进度</text>
                  <view class='star'>
                    <block wx:for="{{stars}}" wx:key="index">
                      <image class="star-image" style="left: {{item*90}}rpx" src="{{key1 > item ?(key1-item == 0.5?halfSrc:selectedSrc) : normalSrc}}">
                        <view class="item" style="left:0rpx" data-key="{{item+0.5}}" bindtap="selectLeft1"></view>
                        <view class="item" style="left:30rpx" data-key="{{item+1}}" bindtap="selectRight1"></view>
                      </image>
                    </block>
                  </view>
              </view>
              <view class='straWrap'>
                <text style='font-size:30rpx; font-weight:600; white-space:nowrap '>施工质量</text>
                  <view class='star'>
                    <block wx:for="{{stars}}" wx:key="index">
                      <image class="star-image" style="left: {{item*90}}rpx" src="{{key2 > item ?(key2-item == 0.5?halfSrc:selectedSrc) : normalSrc}}">
                        <view class="item" style="left:0rpx" data-key="{{item+0.5}}" bindtap="selectLeft2"></view>
                        <view class="item" style="left:30rpx" data-key="{{item+1}}" bindtap="selectRight2"></view>
                      </image>
                    </block>
                  </view>
              </view>
              <view class='straWrap'>
                <text style='font-size:30rpx; font-weight:600; white-space:nowrap '>收费合理</text>
                  <view class='star'>
                    <block wx:for="{{stars}}" wx:key="index">
                      <image class="star-image" style="left: {{item*90}}rpx" src="{{key3 > item ?(key3-item == 0.5?halfSrc:selectedSrc) : normalSrc}}">
                        <view class="item" style="left:0rpx" data-key="{{item+0.5}}" bindtap="selectLeft3"></view>
                        <view class="item" style="left:30rpx" data-key="{{item+1}}" bindtap="selectRight3"></view>
                      </image>
                    </block>
                  </view>
              </view>
            </view>
            <view class="conts">
              <textarea class="areas" placeholder='留下点评，帮助更多人' minlength="{{min}}" maxlength="{{max}}" bindinput="inputs"> 
                <text class="currentWordNumber">{{currentWordNumber|0}}/{{max}}</text>
                <text class="hint">{{texts}}</text>
              </textarea>
            </view>
          </view>
        </view>
        <view class="weui-cell"> 
            <view class="weui-cell__bd"> 
            <view class="weui-uploader"> 
              <view class="weui-uploader__hd"> 
              <view class="weui-uploader__title">晒图：</view> 
              <view class="weui-uploader__info">{{imageList.length}}/{{count}}</view> 
              </view> 
              <view class="weui-uploader__bd"> 
              <view class="weui-uploader__files"> 
                <block wx:for="{{imageList}}" wx:for-item="image" wx:key="index"> 
                <view class="weui-uploader__file"> 
                  <image class="weui-uploader__img" src="{{image}}" data-src="{{image}}" bindtap="previewImage"></image> 
                </view> 
                </block>
              </view> 
              <view class="weui-uploader__input-box"> 
                <view class="weui-uploader__input" bindtap="chooseImage"></view> 
              </view>
              </view> 
            </view> 
          </view> 
        </view> 
      </view>
    <!--个人信息  -->
      <view class='userInfo' animation="{{slide_up3}}">
        <view class='materials-header'>个人信息</view>
        <view class='userInfoWrap'>
          <view class='userName' >
          <text decode="{{true}}">车主：{{lineItemList.customname?lineItemList.customname:""}}&nbsp;&nbsp;{{lineItemList.custommobile?lineItemList.custommobile:""}}</text>
        </view>
        <view class='userSite'>
          <view style='white-space:nowrap;' >地址：</view>
          <text class='userSite-text'>{{lineItemList.customaddr?lineItemList.customaddr:""}}</text>
        </view>
        </view>
      </view>
      <!--车辆信息  -->
      <view class='userInfo' animation="{{slide_up3}}">
        <view class='materials-header'>车辆信息</view>
        <view class='userInfoWrap'>
          <view class='userName' >
          <text decode="{{true}}">车辆型号：{{lineItemList.customname?lineItemList.customname:""}}&nbsp;&nbsp;{{lineItemList.custommobile?lineItemList.custommobile:""}}</text>
        </view>
        <view class='userSite'>
          <view style='white-space:nowrap;' >充电桩型号：</view>
          <text class='userSite-text'>{{lineItemList.customaddr?lineItemList.customaddr:""}}</text>
        </view>
        </view>
      </view>
      <!--材料清单  -->
      <view class='materials'  animation="{{slide_up4}}">
        <view class='materials-header'>材料清单(3)件</view>
        <!-- <view class='materials-table'></view> -->
        <view class='table'>
          <view class='tr bg-header'>
            <view class='th'>序号</view>
            <view class='th'>名称</view>
            <view class='th'>数量</view>
            <view class='th'>小计</view>
          </view>
          <view wx:for="{{lisData}}" wx:key="{{code}}">
            <view class='tr bg-items' wx:if="{{index%2==0}}">
              <view class='td'>{{item.index}}</view>
              <view class='td'>{{item.A}}</view>
              <view class='td'>{{item.B}}</view>
              <view class='td'>￥{{item.C}}</view>
            </view>
            <view class='tr' wx:else>
              <view class='td'>{{item.index}}</view>
              <view class='td'>{{item.A}}</view>
              <view class='td'>{{item.B}}</view>
              <view class='td'>￥{{item.C}}</view>
            </view>
          </view>
        </view>
        <!-- <view class='materials-sumTo'>
          共计：<text>{{lisData.length}}种材料 {{lisData.length}}项施工项目</text>
        </view> -->
        <view class='materials-totalMoney'>
          订单总金额：￥<text>{{sum}}</text>元
        </view>
      </view>
      <!--照片存档  -->
      <view class='picture' animation="{{slide_up5}}">
        <view class='materials-header'>图片</view>
        <view class='picture-img'>
          <view class='img-wrap'  wx:for="{{imgs}}" wx:key="index" >
            <image src='{{item}}'  data-src="{{item}}" mode="aspectFill" bindtap='previewImg'/>
          </view>
        </view>
        <view class='picture-text'>
          <view style='white-space:nowrap;'> 备注信息：</view>
          <text>现场安装顺序</text>
        </view>
        
      </view>
      <!--订单信息  -->
      <view class='order' animation="{{slide_up6}}">
        <view class='materials-header'>订单信息</view>
          <view class='orderInfo'>
            
            <view class='textWrap'>
              <view class='textWrap-item'>下单时间：</view>
              <view class='textWrap-item'>2018-01-3 08:10:33</view>
            </view>
          </view>
          <view class='orderInfo'>
            <view class='textWrap'>
              <view class='textWrap-item'>场勘时间：</view>
              <view class='textWrap-item'>2018-01-3 08:10:33</view>
            </view>
          </view>
          <view class='orderInfo'>
            <view class='textWrap'>
              <view class='textWrap-item'>安装时间：</view>
              <view class='textWrap-item'>2018-01-3 08:10:33</view>
            </view>
          </view>
          <view class='orderInfo'>
            <view class='textWrap'>
              <view class='textWrap-item'>完成时间：</view>
              <view class='textWrap-item'>2018-01-3 08:10:33</view>
            </view>
          </view>
      </view>
