icon {
  vertical-align: middle;
}
.weui-cell {
  padding: 20rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}
.weui-uploader__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-bottom: 10px;
  align-items: center;
}
.weui-uploader__title {
  flex: 1;
}

.weui-uploader__bd {
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
}
.weui-uploader__file {
  float: left;
  margin-right: 27rpx;
  margin-bottom: 18rpx;
}
.weui-uploader__file:last-child{
   margin-right: 0;
}
.weui-uploader__img {
  display: block;
  width: 158rpx;
  height: 158rpx;
}
.image-remover{
  text-align: center;
  font-size: 28rpx;
  margin-top: 5rpx;
}
.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-left: 6rpx;
  margin-bottom: 18rpx;
  width: 144rpx;
  height: 144rpx;
  border: 2rpx solid #d9d9d9;
}
.weui-uploader__input-box:before, .weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.weui-uploader__input-box:before {
  width: 4rpx;
  height: 59rpx;
}
.weui-uploader__input-box:after {
  width: 59rpx;
  height: 4rpx;
}
.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

