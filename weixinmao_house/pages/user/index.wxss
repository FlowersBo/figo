/* weixinmao_hssy/pages/user/index.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100%;
}
.container .header{
  width:100%;
  height: 170rpx;
  background: #fff;
  display: flex;
  border-top: 20rpx solid #f5f5f5;
} 
.pic-img{
  width:150rpx;
  height:140rpx;
  border-radius: 10rpx;
}
.pic-city{
  margin-top: 5rpx;
  width: 30%;
  height: 90%;
  font-size: 28rpx;
  /* display: flex;
  justify-content: center; */
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.icon-weizhi-img{
  margin-right: 6rpx;
}
.container .header .pic{
  width:100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.container .header .pic .pic-name{
  height: 80rpx;
  width:50%;
  font-size: 1rem;
  text-indent: 30rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  font-weight: bold;
}
.container .order{
  width:750rpx;
  display: flex;
  flex-direction: column;
}
.container .order .title{
  font-size: 1rem;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  background: #FFF;
  margin-top:20rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #efefef;
}
.container .order .content{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width:750rpx;
  background: #FFF;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.container .order .content .item{
  width:250rpx;
  text-align: center;
  font-size: .8rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .order .content .item image{
  width:100rpx;
  height: 100rpx;

}
.container .list,.container .listlgout{
  width:750rpx;
  margin-top:20rpx;
  background: #FFF;
}
.container .list .item{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 1rem;
  border-bottom: 1rpx solid #efefef;
  padding-left: 16rpx;
  color: #747474;
}

/* .list-icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
} */
.item-phone{
  height: 60rpx;
  width: 60%;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 36rpx;
  color: #999;
  margin-top: 8rpx;
}

.titlename{
  font-size: 36rpx;
  color: #999;
}




.listlgout .item{
    box-sizing: border-box;
    display: flex;
    flex-direction:row;
    justify-content:center;
    padding: 25rpx 10rpx;
    margin-top:20rpx;
    border-bottom: 20rpx solid #f5f5f5;
    color: #747474;
}
.weixinmao-msg{ 
  position: absolute; 
  top: 0%; left: 0%; 
  width: 100%; 
  height: 100%; 
  background-color: black; 
  z-index:2001; 
  background:rgba(0,0,0,0.7);
  display: flex;
  flex-direction: row;
  justify-content: center;

  
  }
.weixinmao-content{
  width:600rpx;
  height:450rpx;
  z-index:4001; 
  background: #FFF;
  align-self: center;
  border-radius:8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.weixinmao-content .title{
  border-bottom: 1rpx solid #e5e5e5;
  width:100%;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: .8rem;
  background: #3274e5;
  color:#FFF;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.weixinmao-content .title view:nth-child(1){
  width:30%;
}

.weixinmao-content .title view:nth-child(2){
  width:40%;
}
      
.weixinmao-content .title view:nth-child(3){
  width:30%;
}

.weixinmao-content .content{
  display: flex;
  flex-direction: column;
  width:100%;
  justify-content: center;
  margin-top: 20rpx;
}
.weixinmao-content .content .item{
  font-size: .8rem;
  width:100%;
  align-self: center;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.inputlist{
  border: 1rpx solid #efefef;
  width: 80%; 
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 4rpx;
  align-self: center;
}
.bindtel{
  width:400rpx;
  background: #3274e5;
  color: #FFF;
  height: 80rpx;
  line-height: 80rpx;
}
  
.service{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 1rem;
  border-bottom: 1rpx solid #efefef;
  padding-left: 16rpx;
  color: #747474;
  background:none;
} 
.service::after{
  border: none;
}